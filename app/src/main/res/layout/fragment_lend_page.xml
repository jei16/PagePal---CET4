<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollable_lend_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".getstarted"
        tools:layout_editor_absoluteX="-98dp">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lendingPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F6F6FF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/header_lend_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                >

                <ImageView
                    android:id="@+id/logo_lend_page"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginRight="250dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@drawable/logo_lend_page"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="29dp"
                    android:text="mode"
                    android:textColor="#A8A6A6"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/borrow_text_lend_page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="L E N D"
                    android:textColor="#45B0E5"
                    android:layout_marginTop="42dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="20dp">

                </TextView>

                <Button
                    android:id="@+id/btnLendMode"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:background="@drawable/gradient_lend_page_button"
                    android:text="B O R R O W  M O D E "
                    android:layout_marginTop="75dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    >

                </Button>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/baseline_swap_vert_24"
                    android:layout_marginTop="85dp"
                    android:layout_marginRight="170dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    >

                </ImageView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/search_bar_lend_page_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/header_lend_page">

                <EditText
                    android:id="@+id/search_bar_lend_page"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/search_lend_page"
                    android:hint="Search for books you have that you can lend..."
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="18dp"
                    style="@style/lineEditText"
                    android:paddingStart="12dp"
                    >

                </EditText>



            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/donate_group_lend_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/search_bar_lend_page_group"
                >

                <View
                    android:id="@+id/donate_rectangle_lend_page"
                    android:layout_width="320dp"
                    android:layout_height="141dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/donate_rectangle">

                </View>

                <Button
                    android:id="@+id/donate_button_lend_page"
                    android:layout_width="87dp"
                    android:layout_height="48dp"
                    android:background="@drawable/white_rectangle_10dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="200dp"
                    android:text="DONATE"
                    android:textColor="#7A6BBC"
                    android:textStyle="bold"
                    android:clickable="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"

                    >
                </Button>

                <View
                    android:id="@+id/people"
                    android:layout_marginTop="-59dp"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/help_apal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="105dp"
                    android:layout_marginTop="20dp"
                    android:text="Touched by a Pal's story?"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >

                </TextView>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="105dp"
                    android:layout_marginTop="75dp"
                    android:text= "Help them now!"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:textStyle="bold|italic"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />



            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/request_book_group_lend_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf= "@id/donate_group_lend_page"
                >
                <View
                    android:id="@+id/request_a_book_rectangle_lend_page"
                    android:layout_width="320dp"
                    android:layout_height="141dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/rectangle_request"/>

                <View
                    android:id="@+id/glove"
                    android:layout_marginTop="70dp"
                    android:layout_width="67dp"
                    android:layout_height="67dp"
                    android:layout_marginRight="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/pointingampig"/>

                <Button
                    android:id="@+id/lend_book_btn"
                    android:layout_width="87dp"
                    android:layout_height="48dp"
                    android:background="@drawable/white_rectangle_10dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="200dp"
                    android:text="lend book"
                    android:textColor="#45B0E5"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:clickable="true"/>

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="105dp"
                    android:layout_marginTop="20dp"
                    android:text="Got a book you don't use?"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="105dp"
                    android:layout_marginTop="70dp"
                    android:text="Post it now!"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold|italic"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>



            </androidx.constraintlayout.widget.ConstraintLayout>








            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/image_book_group4_lend_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/request_book_group_lend_page"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Book requests from other Pals"
                    android:textColor="#45B0E5"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingStart="43dp"
                app:layout_constraintTop_toBottomOf="@id/image_book_group4_lend_page">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/requestedBooks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>